  <div class= "location-title"> <h1>Locations</h1> </div>

  <div class="container-location" >
     <div>
        <% @locations.each do |location| %>
        <div id="local"  data-lng = "<%= location.longitude %>" data-lat="<%= location.latitude %>">
          <div><%= image_tag("icon.svg", id: "icon") %></div>
          <div>
            <div><h5 class="card-title"><%= location.name %></h5></div>
            <div><p class="card-text"><%= location.address %></p></div>
          </div>
        </div>
        <% end %>
      </div>

    <div id = "map" style="width: 40%; height: 1000px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
